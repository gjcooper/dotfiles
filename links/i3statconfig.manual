# i3status config for Gavin Cooper
load {
    format = "%5min"
}
general {
    #color_degraded = "#cb4b16"
    output_format = "i3bar"
    interval = "10"
    #color_bad = "#dc322f"
    colors = "true"
    #color_good = "#859900"
    #color_separator = "#586e75"
}
# battery 0 {
#         format = "%status %percentage %remaining"
# }
battery 0 {
    threshold_type = "time"
    integer_battery_capacity = "true"
    low_threshold = "15"
	hide_seconds = "true"
	status_chr = "âš¡"
    status_bat = "[BAT]"
    format = "%status%percentage %remaining"
}

volume master {
    device = "default"
    mixer_idx = "0"
    mixer = "Master"
    format = "[VOL] %volume"
}

disk / {
    format = "[DISK FREE] %free"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "[ETH] (%speed) (%ip)"
        format_down = "[ETH DOWN]"
}

wireless _first_ {
    format_up = "[WIFI] %quality (%essid) (%ip)"
    format_down = "[WIFI DOWN]"
}

run_watch DHCP {
    pidfile = "/run/dhcpcd-*.pid"
    format = "%title"
}

cpu_usage {
	format = "[CPU] %usage"
}

time {
    format = "%d/%m/%y %H:%M:%S"
}

order += "disk /"
order += "ethernet _first_"
order += "wireless _first_"
order += "battery 0"
order += "cpu_usage"
order += "volume master"
order += "time"

